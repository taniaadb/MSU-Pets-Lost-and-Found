@model PetsLostAndFound.Models.PetBreedViewModel

@{
    ViewData["Title"] = "Index";
}
@* when we press button with Registered Pets *@

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@* search bar *@
<form asp-controller="Pets" asp-action="Index" method="get">
    <p>
        <select asp-for="PetBreed" asp-items="Model.Breeds">
            <option value="">All</option>
        </select>
        RegisterId: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].Microchipped)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].Microchip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].RegisterId)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Pets[0].AdoptionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].Lost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].LastSeen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Pets)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Microchipped)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Microchip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdoptionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastSeen)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
