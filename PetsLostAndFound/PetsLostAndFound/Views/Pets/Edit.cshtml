@model PetsLostAndFound.Models.Pet

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Name" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Breed" />

            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Microchipped" /> @Html.DisplayNameFor(model => model.Microchipped)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Microchip" class="control-label"></label>
                <input asp-for="Microchip" class="form-control" />
                <span asp-validation-for="Microchip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterId" class="control-label"></label>
                <input asp-for="RegisterId" class="form-control" />
                <span asp-validation-for="RegisterId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AdoptionDate" class="control-label"></label>
                <input asp-for="AdoptionDate" class="form-control" />
                <span asp-validation-for="AdoptionDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Lost" /> @Html.DisplayNameFor(model => model.Lost)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="LastSeen" class="control-label"></label>
                <input asp-for="LastSeen" class="form-control" />
                <span asp-validation-for="LastSeen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Registry</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
