@page
@model PetsLostAndFound.Pages.Pets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

@*add search bar*@
<form>
    <p>
        <select asp-for="PetBreed" asp-items="Model.Breeds">
            <option value="">All</option>
        </select>
        RegisteredId: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Microchipped)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Microchip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].RegisterId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].AdoptionDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Lost)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Pet[0].LostDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pet) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Microchipped)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Microchip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdoptionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LostDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
